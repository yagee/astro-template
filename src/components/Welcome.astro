---
import { Picture } from 'astro:assets';

interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;

import pic from './pic.png';
---

<div class="card">
  <h1>
    {title}
  </h1>
  <p>
    {body}
  </p>
  <div class="pics">
    <Picture
      src={pic}
      alt="A description of my image."
      densities={[1, 2, 3]}
      width={300}
      formats={['avif', 'webp']}
    />
    <Picture
      src={pic}
      alt="A description of my image."
      layout="responsive"
      width={300}
      formats={['avif', 'webp']}
    />
  </div>
</div>

<style>
  h1 {
    font-size: 20px;

    @media screen and (width >= 375px) {
      font-size: 22px;
    }

    @media screen and (width >= 414px) {
      font-size: 24px;
    }
  }

  .card {
    z-index: 5000;
    color: rgb(var(--accent));
  }

  .card {
    color: green;
  }

  .pics {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
  }
</style>
